WidgetsEx:


<WidgetsEx>:
    cols: 1
    # size_hint: None, 1
    # width: "100dp"
    Label:
        text: root.label_text
        font_name: "fonts\\Lcd.ttf"
        font_size: "20dp"
        color: .1, 1, .7, 1
        # size_hint: None, 1
        # width: "100dp"
    Button:
        text: "Click"
        on_press: root.on_button_clicked()
        disabled: not root.is_count_btn_enabled
        background_color: .2, 1, .1, 1
        # size_hint: None, 1
        # width: "100dp"
    ToggleButton:
        text: "ToggleButton"
        on_state: root.on_toggle_button_clicked(self)
        state: "down" if root.is_count_btn_enabled else "normal"
        # size_hint: None, 1
        # width: "100dp"
    Label:
        # text: self.slider_val
        text: f"{just_slider.value}"
        font_name: "fonts\\Lcd.ttf"
        font_size: "20dp"
        color: .1, 1, .7, 1
    Switch:
        id: just_switch
        on_active: root.on_switch_activated(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: just_slider
        min: 0
        max: 100
        value: 3
        disabled: not just_switch.active
        # on_value: root.on_slider_value(self)
        orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: f"{just_slider.value}"
        ProgressBar:
            max: 100
            value: just_slider.value
    TextInput:
        size_hint: None, 1
        width: "100dp"
        text: "Fork"
        multiline: False


