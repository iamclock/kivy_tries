# Splitters example exercise 33
# SplittersEx:
<SplittersEx>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        Splitter:
            sizable_from: "bottom"
        
            Button:
                text: "One"
                font_size: 22
        
        Label:
            text: "Two"
            font_size: 22
        
        Splitter:
            sizable_from: "top"
            Button:
                text: "Three"
                font_size: 22
        
        GridLayout:
            cols: 2
            
            Button:
                text: "Lqweasd"
                font_size: 22
            
            Splitter:
                sizable_from: "left"
                
                Button:
                    text: "Rdsfsre"
                    font_size: 22


