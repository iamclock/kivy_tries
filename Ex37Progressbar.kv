# progressbar example exercise 37
# PB_CustLayout:
<PB_CustLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        Label:
            id: cust_pb_label
            text: f"{int(cust_progress_bar.value*100)}%"
        
        ProgressBar:
            id: cust_progress_bar
            # value: .25
            min: 0
            max: 1
            pos_hint: {"x": .1}
            size_hint_x: .8
        
        Button:
            text: "text_button"
            on_press: root.pb_pressed()

