<MyLayout2@Widget>:
    background_color: 0, 187/255, 1,1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10
        
        Label:
            font_size: 22
            size_hint: 1, .4
            text: "Name"
            background_color: 0, 0, 1, 1
            color: 0, 1, 0, 1
            bold: True
            italic: True
            outline_color: 1, 1, 1, 1
            outline_width: 2
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        TextInput:
            font_size: 18
