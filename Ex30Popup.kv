# Popup example exercise 30
# PopupEx:
#:import Factory kivy.factory.Factory
<PopupWindow@Popup>:
    auto_dismiss: False
    size_hint: .6, .2
    pos_hint: {"x": .2, "top": .65}
    
    title: "Popup window"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        Label:
            text: "Something interesting"
            font_size: 18
        
        Button:
            text: "Okay"
            font_size: 18
            on_release: root.dismiss()
    

<PopupEx@Widget>:
    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Label:
            text: "Popup Label"
            font_size: 18
            
        Button:
            text: "Popup Button"
            font_size: 18
            on_release: Factory.PopupWindow().open()
        

