# Dial button menu example exercise 47

# https://kivymd.readthedocs.io/en/1.1.1/components/button/index.html#mdfloatingactionbuttonspeeddial

MDBoxLayout:
    orientation: app.Orientation.vertical
    
    MDScreen:
        
        MDLabel:
            id: my_label
            text: "Some text"
            halign: "center"
            
        MDFloatingActionButtonSpeedDial:
            data: app.data
            root_button_anim: True
            # data: {icon:text, icon:text, ...} # не удобный способ
            label_text_color: 1, 0, 0, 1
            bg_color_stack_button: 1, 0, 0, 1 # не работает
            bg_color_root_button: 1, 0, 0, 1 # не работает
            color_icon_root_button: 1, 0, 0, 1
            color_icon_stack_button: 1, 0, 0, 1
            bg_hint_color: 1, 0, 0, 1
            callback: app.callback # не работает
            on_open: app.open()
            on_close: app.close()
            

