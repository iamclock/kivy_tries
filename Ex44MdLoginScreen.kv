# Login screen example exercise 44


Screen:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: dict(center_x=.5, center_y=.5)
        elevation: 5 # затенение
        padding: 25
        spacing: 25
        orientation: "vertical"
    
        MDLabel:
            id: welcome_label
            text: "welcome"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        
        MDTextField:
            mode: "round"
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: dict(center_x=.5)
        
        MDTextField: # MDTextFieldRound # так не работает
            mode: "round"
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: dict(center_x=.5)
            password: True
        
        MDRoundFlatButton:
            text: "Login"
            font_size: 12
            pos_hint: dict(center_x=.5)
            on_press: app.logger()
        
        MDRoundFlatButton:
            text: "Clear"
            font_size: 12
            pos_hint: dict(center_x=.5)
            on_press: app.clear()
        
        Widget:
            size_hint_y: None
            height: 10




